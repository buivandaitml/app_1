<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".t1"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".t2"), root_path %></li>
        <li><%= link_to t(".t3"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".t5"), "#" %></li>
          <li class="dropdown">
            <a link_to "#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".t9") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".t6"), current_user %></li>
              <li><%= link_to t(".t7"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".t8"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".t4"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
